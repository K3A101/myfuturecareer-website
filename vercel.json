{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "headers": {
                "Content-Security-Policy": "default-src *; font-src * https://myfuturecareer.vercel.app; script-src *; style-src *"
            }
        }
    ]
}